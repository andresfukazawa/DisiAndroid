/*
DROP  TABLE USUARIO;
DROP  TABLE TIPOCAMBIO;
DROP  TABLE PRODUCTOTIPO;
DROP  TABLE CLIENTE;
DROP  TABLE DOCFISCAL;
DROP  TABLE MONEDA;
DROP  TABLE MESA;
DROP  TABLE FORMAPAGO;
DROP  TABLE DOCFISCAL_DETALLE;
DROP  TABLE PEDIDO;
DROP  TABLE PRODUCTO;
DROP  TABLE PEDIDO_DETALLE;
*/

CREATE TABLE USUARIOS(
	USUACOD INTEGER PRIMARY KEY  NOT NULL,
 	USUADES TEXT,
	USUACLAV TEXT,
        USUAMAIL TEXT,
	USUAINA INTEGER);

CREATE TABLE TIPO_CAMBIO(
     TIPCCOD INTEGER PRIMARY KEY  NOT NULL,
     TIPCFEC TEXT,
     TIPCMON TEXT,
     TIPCCOM DOUBLE,
     TIPCVEN DOUBLE,
     TIPCINA INTEGER);

CREATE TABLE PRODUCTO_TIPO(
     TIPOCOD INTEGER PRIMARY KEY  NOT NULL,
     TIPODES TEXT,
     TIPOINA INTEGER);

CREATE TABLE CLIENTE(
        CLIECOD  INTEGER PRIMARY KEY  NOT NULL,
  	CLIERUC  TEXT,
 	CLIENOM  TEXT,
 	CLIEFECR TEXT,
 	CLIEUSUR TEXT,
 	CLIEINA  INTEGER);

CREATE TABLE DOCFISCAL(
	DOCFCOD INTEGER PRIMARY KEY  NOT NULL,
	DOCFCLI INTEGER,
	DOCFSER TEXT,
	DOCFNUM TEXT,
	DOCFFEC TEXT,
 	DOCFMON TEXT,
	DOCFSUB DOUBLE,
	DOCFIGV DOUBLE,
	DOCFTOT DOUBLE,
 	DOCFEST INTEGER,
	DOCFECR TEXT,
	DOCUSER TEXT,
 	DOCTIPCA DOUBLE,
	DOCFPAG INTEGER);

CREATE TABLE MONEDA(
	 MONCOD  TEXT,
 	MONDESC TEXT,
	MONABRE TEXT);

CREATE TABLE MESAs(
 	MESACOD INTEGER PRIMARY KEY  NOT NULL,
	MESADES TEXT,
	MESAINA INTEGER);


CREATE TABLE FORMAPAGO(
 	FORPACOD INTEGER PRIMARY KEY  NOT NULL,
	FORPADES TEXT,
	FORPAINA INTEGER);


CREATE TABLE DOCFISCAL_DETALLE(
	 DETITEM INTEGER PRIMARY KEY  NOT NULL,
	DETDDOC INTEGER,
 	DETDPED INTEGER,
	DETDITE INTEGER,
	DETDPRO INTEGER,
       DETDCAN DOUBLE,
        DETDPRE DOUBLE,
	DETDIMP DOUBLE,
	DETDINA INTEGER);

CREATE TABLE PEDIDO(
	PEDICOD INTEGER PRIMARY KEY  NOT NULL,
	PEDCLIE TEXT,
	PEDIFEC TEXT,
	PEDIUSU TEXT,
	PEDIVEN TEXT,
	PEDINAC INTEGER);

CREATE TABLE PRODUCTO(
	PRODCOD INTEGER PRIMARY KEY  NOT NULL,
	PRODMON TEXT,
	PRODTIP TEXT,
	PRODNOM TEXT,
	PRODDES TEXT,
	PRODPRE DOUBLE,
	PRODINA INTEGER,
	PRODFTO TEXT);

CREATE TABLE PEDIDO_DETALLE(
	DETPITE INTEGER PRIMARY KEY  NOT NULL,
	DETPPED TEXT,
	DETPPRO TEXT,
	DETPCAN DOUBLE,
	DETPPRE DOUBLE,
	MESADET TEXT,
	DETPINA INTEGER);
